{
  "name": "PDFcheck",
  "version": "0.0.0",
  "description": "Check PDF files for accessibility features",
  "main": "index.html",
  "private": true,
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "stylelint": "^9.7.1",
    "stylelint-config-recommended": "^2.1.0"
  },
  "scripts": {
    "eslint": "eslint *.js --fix",
    "stylelint": "stylelint '*.css' --fix",
    "serve": "browser-sync start --server --files '*.css, *.js, *.html'",
    "test": "npm run stylelint && npm run eslint",
    "work": "npm run test && npm run serve"
  }
}
